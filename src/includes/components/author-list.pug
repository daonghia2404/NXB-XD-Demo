-
  const authorDatas = [
    {
      authorAvatar: './assets/images/author-avatar/author-avatar-1.png',
      authorType: 'checked'
    },
    {
      authorAvatar: './assets/images/author-avatar/author-avatar-2.png'
    },
    {
      authorAvatar: './assets/images/author-avatar/author-avatar-3.png'
    },
    {
      authorAvatar: './assets/images/author-avatar/author-avatar-4.png'
    },
  ]

.author-list
  .author-list-wrapper.d-flex
    .author-list-wrapper-item
      .author-list__more-txt Nhiều tác giả

      .d-flex.align-items-center(style="margin-top: 5px;")
        .author-list__avatar
          each item in authorDatas
            .author-list__avatar-img 
              img(class="lazy" data-src=`${item.authorAvatar}` src=`${item.authorAvatar}`, alt="")
              span.img__check
                if item.authorType == "checked"
                  svg(xmlns='http://www.w3.org/2000/svg' width='10' height='10' viewbox='0 0 10 10' fill='none')
                    path(d='M5.00016 0.833374C2.69808 0.833374 0.833496 2.69796 0.833496 5.00004C0.833496 7.30004 2.69808 9.16671 5.00016 9.16671C7.30016 9.16671 9.16683 7.30004 9.16683 5.00004C9.16683 2.69796 7.30016 0.833374 5.00016 0.833374ZM4.16683 7.08337L2.0835 5.00004L2.67308 4.41046L4.16683 5.90421L7.32725 2.74379L7.91683 3.33337L4.16683 7.08337Z' fill='#27AE34')

        .author-list__more
          .author-list__more-list
            span +3 

            .list__content
              span.list__content-btn
                svg(xmlns='http://www.w3.org/2000/svg' width='14' height='14' viewbox='0 0 14 14' fill='none')
                  path(d='M14 1.415L12.585 0L7 5.585L1.415 0L0 1.415L5.585 7L0 12.585L1.415 14L7 8.415L12.585 14L14 12.585L8.415 7L14 1.415Z' fill='#828282')
              h5.h5-16.mb-0.list__content-title Danh sách tác giả
              .list__content-author
                .row.border-ct
                  each item, index in [1,2,3,4,5,6,7,8]
                    .col-6.col-sm-4.col-md-3.box-item
                      .author__item
                        .author__item-img
                          a(href="#" class="img__links")
                            img(class="lazy" data-src="./assets/images/author-avatar/avatar.png" src="./assets/images/author-avatar/avatar.png" alt="")
                            if index == '0'
                              span.img__check
                                svg(xmlns='http://www.w3.org/2000/svg' width='16' height='16' viewbox='0 0 16 16' fill='none')
                                  path(fill-rule='evenodd' clip-rule='evenodd' d='M0.666504 7.99984C0.666504 3.94975 3.94975 0.666504 7.99984 0.666504C12.0499 0.666504 15.3332 3.94975 15.3332 7.99984C15.3332 12.0499 12.0499 15.3332 7.99984 15.3332C3.94975 15.3332 0.666504 12.0499 0.666504 7.99984Z' fill='#27AE34')
