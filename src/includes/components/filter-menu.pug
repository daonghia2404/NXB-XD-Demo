        form.box-effect.box-select
            h3.box-title Đối tác liên kết
            .partner-items.d-flex.flex-wrap.justify-content-center
                each item in [1,2,3,4]
                    .partner-item 
                        input(type="checkbox")
                        .partner-item-image 
                            img(src="./assets/images/partner/partner-logo.png", alt="")

                        .partner-item-tooltip Đại học Hà Nội
        form.box-author
            h3.box-title Tác giả
            .box-author__check
                input(type="checkbox" name="authors" id="authors")
                label(for="authors")!= 'Nhiều tác giả' + '<span> (12044) </span>'
            .box-author__check
                input(type="checkbox" name="windy" id="windy")
                label(for="windy")!= 'The Windy' + '<span> (474) </span>'
            .box-author__check
                input(type="checkbox" name="dk" id="dk" )
                label(for="dk")!= 'DK' + '<span> (410) </span>'
        
        form.box-effect.author-type.select-type
            select(class="author-select" multiple="multiple" style="width: 100%")
                each item in [1,2,3,4]
                    option(value ="Tố Hữu") Tố Hữu 
            button(type='submit')
                img(src="assets/images/search2.svg", alt="")

        .box-languages
            h3.box-title Ngôn ngữ
            form.box-languages__item
                span.language.vietnamese
                    input(type="radio" name="language" id="vietnamese" checked)
                    label(for="vietnamese" class="item-link") Tiếng việt
                span.language.english
                    input(type="radio" name="language" id="english")
                    label(for="english" class="item-link") Tiếng Anh

        form.box-effect.language-type.select-type
            select(class="language-select" multiple="multiple" style="width: 100%")
                each item in [1,2,3,4]
                    option(value ="Ngôn ngữ 1")= `Ngôn ngữ ${item}`
            button(type='submit')
                img(src="assets/images/search2.svg", alt="")
                
        .box-price
            h3.box-title Mức giá
            form.box-price__form
                .form-item.item-from
                    input(type="text" name="" placeholder="Từ" class="input-control")
                .form-item.item-to
                    input(type="text" name="" placeholder="Đến" class="input-control")
